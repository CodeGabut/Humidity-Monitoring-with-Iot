<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IoT Dashboard</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
   html, body {
  height: 100%;             /* isi full tinggi layar */
  margin: 0;                /* hilangkan margin default */
}

body {
  background: linear-gradient(#3aaac5,#4776e6) no-repeat center center fixed;
  background-size: cover;   /* biar menutupi full */
  font-family: Arial, sans-serif;
}
    .chart-wrapper {
      position: relative;
      width: 100%;
      aspect-ratio: 1 / 1;   /* bikin canvas selalu bulet */
    }
    .chart-wrapper canvas {
      width: 100% !important;
      height: 100% !important;
    }
    .value {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 22px;
      font-weight: bold;
      color: #333;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card shadow">
          <div class="card-body text-center ">
            <h5 class="card-title">Humidity Monitoring</h5>
            <div class="chart-wrapper" style="height: 250px;">
              
              
             <img src="/Fisika_Teoritik__Komputasi_dan_Instrumentasi__34_-removebg-preview.png" 
     alt="Logo"
     class="img-fluid d-block mx-auto"
     style="max-width: 80%; height: auto;">

            </div>
            
            
            <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Password</span>
  
  <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  <button type="button" class="btn btn-primary mt-3" style="background-color: #3aaac5 !important;width: 100%;">Entry</button>
</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Script Chart.js -->
  <script>
    const ctx = document.getElementById('humidityChart').getContext('2d');

    const humidityChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        datasets: [{
          data: [40, 60],
          backgroundColor: ['#00c9ff', '#e0e0e0'],
          borderWidth: 0,
          cutout: '75%' // lubang tengah
        }]
      },
      options: {
        maintainAspectRatio: false,
        plugins: {
          tooltip: { enabled: false },
          legend: { display: false }
        }
      }
    });

    function updateHumidity(value) {
      humidityChart.data.datasets[0].data = [value, 100 - value];
      humidityChart.update();
      document.getElementById("humidityValue").textContent = value + "%";
    }

    // simulasi update tiap 2 detik
    setInterval(() => {
      let randomValue = Math.floor(Math.random() * 100);
      updateHumidity(randomValue);
    }, 2000);
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
